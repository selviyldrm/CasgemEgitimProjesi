
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Eğitmen Yönetim Paneli</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Templates/Teacher/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bbootstrap 4 -->
    <link rel="stylesheet" href="~/Templates/Teacher/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Templates/Teacher/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/Templates/Teacher/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Templates/Teacher/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Templates/Teacher/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/Templates/Teacher/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/Templates/Teacher/plugins/summernote/summernote-bs4.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="index3.html" class="nav-link">Eğitmen Yönetim Paneli</a>
                </li>
               
            </ul>

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Templates/Teacher/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Eğitmen Paneli</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->

                @await Component.InvokeAsync("_Teacher")
              
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                       
                        <li class="nav-item">
                            <a href="/TeacherCourse/ListCourse/" class="nav-link">
                                <i class="nav-icon fa fa-book"></i>
                                <p>
                                    Kurslar

                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/TeacherCourse/AddCourse/" class="nav-link">
                                <i class="nav-icon fa fa-plus-square"></i>
                                <p>
                                    Kurs Ekle

                                </p>
                            </a>
                        </li> 
                        <li class="nav-item">
                            <a href="/Teacher/UpdateTeacher/" class="nav-link">
                                <i class="nav-icon fa fa-user"></i>
                                <p>
                                    Profilim

                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Message/GetInboxTeacher/" class="nav-link">
                                <i class="nav-icon fa fa-envelope"></i>
                                <p>
                                    Gelen Mesajlar

                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/VitrinCourse/Index/" class="nav-link">
                                <i class="nav-icon fa fa-home"></i>
                                <p>
                                    Siteye Git
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/User/Logout/" class="nav-link">
                                <i class="nav-icon fa fa-window-close"></i>
                                <p>
                                    Çıkış Yap

                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
           
            <!-- Main content -->
            <section class="content">
                @RenderBody()
               
            </section>
            <!-- /.content -->
        </div>
    

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Templates/Teacher/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/Templates/Teacher/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->
    <script src="~/Templates/Teacher/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    <script src="~/Templates/Teacher/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="~/Templates/Teacher/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/Templates/Teacher/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/Templates/Teacher/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/Templates/Teacher/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/Templates/Teacher/plugins/moment/moment.min.js"></script>
    <script src="~/Templates/Teacher/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/Templates/Teacher/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/Templates/Teacher/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/Templates/Teacher/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Templates/Teacher/dist/js/adminlte.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/Templates/Teacher/dist/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Templates/Teacher/dist/js/demo.js"></script>
</body>
</html>

