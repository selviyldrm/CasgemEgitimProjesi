@model List<Message>
@{
    ViewData["Title"] = "GetInboxTeacher";
    Layout = "~/Views/Shared/Teacher/_TeacherLayout.cshtml";
}
<h1>Gelen Kutusu</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesaj</th>
        <th>Mesajı Aç</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.SenderID</td>
            <td>@item.MessageDetails</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></td>
        </tr>
    }
</table>

<a href="/Message/SendMessageTeacher/" class="btn btn-dark">Mesaj Gönder</a>
