@model List<Message>
@{
    ViewData["Title"] = "GetInboxStudent";
    Layout = "~/Views/Shared/Student/_StudentLayout.cshtml";
}

<h1>Gelen Kutusu</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
        <th>Mesaj Detayları</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.SenderID</td>
            <td>@item.Subject</td>
            <td>@item.MessageDetails</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Message/MessageStudentDetails/@item.MessageID" class="btn btn-info">Mesajı Aç</a></td>
        </tr>
    }
</table>

<a href="/Message/SendMessage/" class="btn btn-dark">Mesaj Gönder</a>