@model CasgemEgitim.EntityLayer.Concrete.Course

@{
    Layout = "~/Views/Shared/Vitrin/_VitrinLayout.cshtml";
}

<!-- about breadcrumb -->
<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container pt-lg-5 pt-3 p-lg-4 pb-3">

            <h2 class="title mt-5 pt-lg-5 pt-sm-3">@Model.CourseName</h2>

            <ul class="breadcrumbs-custom-path pb-sm-5 pb-4 mt-2 text-center mb-md-5">
                <li><a href="/VitrinCourse/Index/">Kurslar</a></li>
                <li class="active"> / Kurs Detayı </li>
            </ul>
        </div>
    </div>
    <div class="waveWrapper waveAnimation">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none">
            <path d="M-5.07,73.52 C149.99,150.00 299.66,-102.13 500.00,49.98 L500.00,150.00 L0.00,150.00 Z" style="stroke: none;"></path>
        </svg>
    </div>
</section>
<!-- //about breadcrumb -->


<div class="container-fluild" style="margin:20px" >



    <div class="row">

        <div class="col-lg-6">
            <img src="@Model.CourseImgUrl" style="width:650px; border-radius:5%; box-shadow:2px 10px 20px #808080; " class="img-fluid" />
        </div>
        <div class="col-lg-6" >
           

            <table class="table table-striped">

               
                <tr>
                    <th>Kurs Fiyatı</th>
                    <td>@Model.CoursePrice ₺</td>
                </tr>

                <tr>
                    <th>Kurs Açıklama</th>
                    <td>@Model.CourseDes</td>
                </tr>

                <tr>
                    <th>Kursun Eğitmeni</th>
                    <td>@ViewBag.teacherName</td>
                </tr>

                  <tr>
                    <th>Mobil ve TV'den erişim</th>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="30" height="30" viewBox="0 0 30 30">
                            <path d="M 26.980469 5.9902344 A 1.0001 1.0001 0 0 0 26.292969 6.2929688 L 11 21.585938 L 4.7070312 15.292969 A 1.0001 1.0001 0 1 0 3.2929688 16.707031 L 10.292969 23.707031 A 1.0001 1.0001 0 0 0 11.707031 23.707031 L 27.707031 7.7070312 A 1.0001 1.0001 0 0 0 26.980469 5.9902344 z"></path>
                        </svg>
                    </td>
                </tr>

                  <tr>
                    <th>Ömür boyu tam erişim</th>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="30" height="30" viewBox="0 0 30 30">
                            <path d="M 26.980469 5.9902344 A 1.0001 1.0001 0 0 0 26.292969 6.2929688 L 11 21.585938 L 4.7070312 15.292969 A 1.0001 1.0001 0 1 0 3.2929688 16.707031 L 10.292969 23.707031 A 1.0001 1.0001 0 0 0 11.707031 23.707031 L 27.707031 7.7070312 A 1.0001 1.0001 0 0 0 26.980469 5.9902344 z"></path>
                        </svg>
                    </td>
                </tr>

                <tr>
                    <th>Bitirme sertifikası</th>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="30" height="30" viewBox="0 0 30 30">
                            <path d="M 26.980469 5.9902344 A 1.0001 1.0001 0 0 0 26.292969 6.2929688 L 11 21.585938 L 4.7070312 15.292969 A 1.0001 1.0001 0 1 0 3.2929688 16.707031 L 10.292969 23.707031 A 1.0001 1.0001 0 0 0 11.707031 23.707031 L 27.707031 7.7070312 A 1.0001 1.0001 0 0 0 26.980469 5.9902344 z"></path>
                        </svg>
                    </td>
                </tr>
                <tr>
                    <th>30 Gün İçinde Para İade Garantisi</th>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="30" height="30" viewBox="0 0 30 30">
                            <path d="M 26.980469 5.9902344 A 1.0001 1.0001 0 0 0 26.292969 6.2929688 L 11 21.585938 L 4.7070312 15.292969 A 1.0001 1.0001 0 1 0 3.2929688 16.707031 L 10.292969 23.707031 A 1.0001 1.0001 0 0 0 11.707031 23.707031 L 27.707031 7.7070312 A 1.0001 1.0001 0 0 0 26.980469 5.9902344 z"></path>
                        </svg>
                    </td>
                </tr>

               

            </table>


            <a href="/VitrinCourse/CourseBuy/@Model.CourseId" class="btn btn-success form-control">Satın Al</a>

        </div>

    
    
    </div>


    <br />
    <br />



    @await Component.InvokeAsync("_CourseDetailCourseName", new{id=Model.CourseId})
