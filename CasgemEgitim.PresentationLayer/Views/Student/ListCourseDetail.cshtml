@model List<Video>
@{
    Layout = "~/Views/Shared/Student/_StudentLayout.cshtml";
}


<div class="container">
    <br />

    <h1>@ViewBag.CourseName</h1>

    <br />
    <a class="btn btn-outline-danger" href="/Student/ListUserCourse/"> Geri</a>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Yorum Yap
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/Student/Comment/">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Kursa Yorum Yap</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="CourseId" value="@ViewBag.Id" />
                        <textarea name="CommentMessage" placeholder="Bu kursa yorumunuz" class="form-control" rows="5"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Yorum Yap</button>
                    </div>

                </form>
              
            </div>
        </div>
    </div>



  

    <hr />






    <div>

        @if (Model.Count == 0)
        {
            <div class="alert alert-danger" role="alert">
                Bu kursun içeriği bulunmamaktadır.
            </div>

        }
        else
        {


            <table class="table table-striped">
                <tr>
                    <th>#</th>
                    <th>Video</th>
                    <th>Ders Adı</th>
                   
                </tr>

                @{
                    int a = 1;
                }
                @foreach (var i in Model){

                    <tr>
                        <th>@a</th>
                        <td>
                            <iframe width="300"
                                    src="@i.VideoUrl"
                                    title="YouTube video player"
                                    frameborder="0" allow="accelerometer; autoplay;
                                clipboard-write; encrypted-media;
                                gyroscope; picture-in-picture; web-share"
                                    allowfullscreen>
                            </iframe>
                        </td>
                        <td>@i.VideoName</td>
                      
                       
                    </tr>

                    a++;
                }
            </table>


        }

    </div>
</div>

